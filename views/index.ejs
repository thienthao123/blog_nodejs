                                    <h5>Tags:</h5>
                                    <% post.tags.forEach(function(tag) { %>
                                    <a href="/tag/<%=tag%>" class="btn btn-primary btn-xs" type="button"><%= tag %></a>
                                    <% }) %>
                                </div>
                                <div class="col-md-6">
                                    <div class="small text-right">
                                        <h5>Stats:</h5>
                                        <div> <i class="fa fa-comments-o"> </i> 56 comments </div>
                                        <i class="fa fa-eye"> </i> 144 views
