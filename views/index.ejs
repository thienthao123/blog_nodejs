<% include ./header.ejs %>
        <div class="wrapper wrapper-content">
            <div class="container">
             <div class="row">
               <%  posts.forEach((post) => { %>
                <div class="col-lg-3">
                    <div class="ibox">
                        <div class="ibox-content">
                            <a href="article.html" class="btn-link">
                                <h4>
                                   <%= post.title %>
                                </h4>
                            </a>
                            <img src="<%= post.img %>" height="220" width="220">

                            <div class="small m-b-xs">
